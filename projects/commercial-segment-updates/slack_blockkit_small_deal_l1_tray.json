{
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Small Deal Approval Request",
        "emoji": true
      }
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "Level 1 of 2 • Requires Sales Leadership approval"
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Account:* {$.steps.salesforce-4.records[0].Name}"
        },
        {
          "type": "mrkdwn",
          "text": "*Physician Count:* {$.steps.salesforce-4.records[0].Total_Physician_Count_F__c}"
        }
      ]
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Opportunity:* {$.steps.salesforce-3.records[0].Name}"
        },
        {
          "type": "mrkdwn",
          "text": "*Amount:* ${$.steps.salesforce-3.records[0].Amount}"
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Requested by:* {$.steps.salesforce-2.records[0].CreatedById}"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "<https://abridgeai.lightning.force.com/lightning/r/Opportunity/{$.steps.trigger.body.opportunity_id}/view|View in Salesforce>"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "<@SLACK_ID_JVH> <@SLACK_ID_AAMIR> — Please review this small deal request."
      }
    },
    {
      "type": "actions",
      "block_id": "approval_actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "Approve",
            "emoji": true
          },
          "style": "primary",
          "action_id": "approve_commercial",
          "value": "{$.steps.trigger.body.approval_record_id}"
        },
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "Reject",
            "emoji": true
          },
          "style": "danger",
          "action_id": "reject_commercial",
          "value": "{$.steps.trigger.body.approval_record_id}"
        }
      ]
    }
  ]
}
